<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_2">

    <LinearLayout
        android:id="@+id/content_text_lly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_alpha_black"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_5"
        android:paddingTop="@dimen/dp_3"
        android:paddingEnd="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_3">

        <com.tao.xiaoyuanyuan.view.MarqueeTextView
            android:id="@+id/suspensionText_show"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="start"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="@dimen/dp_350"
            android:minWidth="@dimen/dp_100"
            android:minHeight="@dimen/dp_15"
            android:singleLine="true"
            android:src="@mipmap/ic_launcher_round"
            android:text="开始"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/suo_iv"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center|end"
            android:layout_marginStart="@dimen/dp_10"
            android:src="@mipmap/user_suo"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_0_5"
        android:background="@drawable/bg_alpha_black"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="@dimen/dp_5"
            android:paddingTop="@dimen/dp_3"
            android:paddingEnd="@dimen/dp_1"
            android:paddingBottom="@dimen/dp_3"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            android:visibility="visible" />

        <TextView

            android:id="@+id/total_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="@dimen/dp_5"
            android:paddingTop="@dimen/dp_3"
            android:paddingEnd="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:text="在线:0秒"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:visibility="gone" />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:format24Hour="EE HH:mm:ss"
            android:gravity="center"
            android:paddingStart="@dimen/dp_1"
            android:paddingTop="@dimen/dp_3"
            android:paddingEnd="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_3"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8" />


    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_124"
    android:layout_marginBottom="@dimen/dp_3_5"
    android:layout_marginTop="@dimen/dp_3_5"
    android:background="@color/white"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/ad_img_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_shadow_light_red"
        android:elevation="1dp"
        android:outlineAmbientShadowColor="@color/red_d7_14"
        android:outlineSpotShadowColor="@color/red_d7_14"
        app:cardCornerRadius="3dp">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/dp_117"
            android:layout_height="@dimen/dp_93"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/animation_img3"
            android:text="广告内容"/>


    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="@dimen/dp_168"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_toRightOf="@+id/ad_img_card">

        <TextView
            android:id="@+id/item_ad_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="支付宝设计中心：超级营销“集背后的设计体系dhghghgh"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/item_ad_time_tv"
            android:layout_below="@+id/item_ad_title_tv"
            android:visibility="visible">

            <TextView
                android:id="@+id/item_ad_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_3"
                android:background="@drawable/bg_orange_ovl_3"
                android:gravity="center"
                android:padding="@dimen/dp_4"
                android:text=""
                android:textColor="@color/color_orange_cd"
                android:textSize="@dimen/sp_7"/>
        </LinearLayout>


        <TextView
            android:id="@+id/item_ad_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_7"
            android:text="03-13 10:10"
            android:textColor="@color/color_gray_c5"
            android:textSize="@dimen/sp_10"/>

        <TextView
            android:id="@+id/item_ad_distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_7"
            android:layout_marginStart="@dimen/dp_19"
            android:layout_toEndOf="@+id/item_ad_time_tv"
            android:text=""
            android:textColor="@color/color_gray_c5"
            android:textSize="@dimen/sp_10"/>
    </RelativeLayout>


</RelativeLayout>